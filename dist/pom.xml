<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>alkatraz-dist</artifactId>

    <parent>
        <groupId>me.nagasonic</groupId>
        <artifactId>alkatraz-parent</artifactId>
        <version>${revision}</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R7</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R6</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R5</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R4</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R3</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_21_R1</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_20_R4</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_20_R3</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_20_R2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_20_R1</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_19_R3</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_19_R2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>me.nagasonic</groupId>
            <artifactId>alkatraz-v1_19_R1</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>clean package</defaultGoal>
        <directory>../target</directory>
        <finalName>Alkatraz_${revision}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <outputDirectory>${outputDirectory}</outputDirectory>
                    <classesDirectory>dummy</classesDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <minimizeJar>false</minimizeJar>
                    <filters>
                        <filter>
                            <artifact>me.nagasonic:alkatraz-core</artifact>
                            <includes>**</includes>
                        </filter>
                    </filters>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <relocations>
                        <!-- NBT-API start -->
                        <relocation>
                            <pattern>de.tr7zw.alkatraz.nbtapi</pattern>
                            <shadedPattern>${shadedPackage}.me.nagasonic.alkatraz.nbtapi</shadedPattern>
                        </relocation>
                        <!-- NBT-API end -->
                    </relocations>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>